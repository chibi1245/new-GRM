    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="windowSplashScreenBackground">#e3f7e3</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="android:windowSplashScreenBehavior" tools:targetApi="33">icon_preferred</item>
        <item name="postSplashScreenTheme">@style/Theme.AppCompat.DayNight.NoActionBar</item>
    </style>
</resources>
